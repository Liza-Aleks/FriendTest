<Page x:Class="Friendship_test.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Friendship_test"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="106*"/>
            <RowDefinition Height="31*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="278*"/>
            <ColumnDefinition Width="127*"/>
            <ColumnDefinition Width="395*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="image" Margin="20,10" />
        <ListBox x:Name="listBoxAllFriends" Margin="10,20,10,10" Grid.Row="1"/>
        <ListBox x:Name="listBoxTop" Grid.ColumnSpan="2" Grid.Column="1" Margin="10,20,10,10" Grid.Row="1"/>
        <Label x:Name="label" Content="Имя:" FontSize="30" Grid.Column="1" Margin="10,30,10,100"/>
        <Label x:Name="labelName" FontSize="25" Grid.Column="2" Margin="10,30,10,100"/>
        <Button x:Name="buttonGoTo" FontSize="30" Content="Перейти" Margin="20" Grid.Row="2"/>
        <Button x:Name="buttonBack" FontSize="30" Content="Назад" Grid.Column="1" Margin="10,20,10,20" Grid.Row="2"/>
        <Button x:Name="buttonCreateTest" Visibility="Visible" FontSize="30" Content="Создать тест" Grid.Column="2" Margin="30,20,20,20" Grid.Row="2" Click="buttonCreateTest_Click"/>

    </Grid>
</Page>
